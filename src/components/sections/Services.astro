---
import Service from "../cards/Service.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import { services } from "../../utils/data.ts";

type ServicesProps = {
  title: string;
  icon: string;
};
---

<section id="services">
  <Container className="space-y-10 md:sapce-y-12">
    <div class="text-center max-w-3xl mx-auto space-y-4">
      <Title
        ><span style="color: #ED2024">
          Beneficios de nuestros servicios
        </span></Title
      >
      <Paragraph>
        Nuestro objetivo es proveerte el mejor servicio, como restaurante, rider
        o consumidor.
      </Paragraph>
    </div>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        services.map((service: ServicesProps) => {
          return <Service title={service.title} icon={service.icon} />;
        })
      }
    </div>
  </Container>
</section>
